<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="JobbyTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/JobbyTheme.ActionBar</item>
    </style>

    <style name="JobbyTheme.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/JobbyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="JobbyTheme.ActionBar.TitleTextStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>